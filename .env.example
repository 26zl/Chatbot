# API keys (replace with your own before running locally)
COHERE_API_KEY=your_cohere_key
PINECONE_API_KEY=your_pinecone_key
OPENAI_API_KEY=your_openai_key

# Pinecone configuration
PINECONE_INDEX=website-knowledge-index

# Embedding/index parameters (optional overrides)
COHERE_EMBED_MODEL=embed-multilingual-v3.0
EMBED_BATCH_SIZE=96

# Evaluation artifact locations (optional)
EVAL_DATA_PATH=data/eval_set.jsonl
EVAL_RESULTS_PATH=data/eval_results.json

# Security controls for Streamlit app (recommended for any non-local deployment)
# If set, users must enter this password in the sidebar to use the app.
APP_PASSWORD=change_me

# Optional: restrict scraping to these domains (comma-separated).
# Example: ALLOWED_DOMAINS=developers.cloudflare.com,docs.python.org
ALLOWED_DOMAINS=

# Optional: basic rate limits to control API usage/spend
SCRAPE_LIMIT_PER_HOUR=30
QUERY_LIMIT_PER_MINUTE=60
